{
    "name": "lkrms/time-tracking",
    "description": "Time entry automation",
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Arms",
            "email": "luke@linacreative.com"
        }
    ],
    "support": {
        "issues": "https://github.com/lkrms/time-tracking/issues",
        "source": "https://github.com/lkrms/time-tracking"
    },
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6",
        "league/oauth2-client": "^2",
        "salient/cache": "^0.99",
        "salient/cli": "^0.99",
        "salient/collections": "^0.99",
        "salient/contracts": "^0.99",
        "salient/core": "^0.99",
        "salient/curler": "^0.99",
        "salient/http": "^0.99",
        "salient/sync": "^0.99",
        "salient/utils": "^0.99"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-deprecation-rules": "^2",
        "phpunit/phpunit": "^9",
        "salient/phpstan": "^0.99",
        "salient/sli": "^0.99"
    },
    "autoload": {
        "psr-4": {
            "Lkrms\\Time\\": "src/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "bin": [
        "bin/lk-time"
    ],
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "platform": {
            "php": "8.0.30"
        },
        "sort-packages": true
    }
}
